{
  "name": "aadishui-chat",
  "version": "1.0.0",
  "description": "A modern desktop GUI for Akatsuki Chat.",
  "private": true,
  "author": "Aadish",
  "homepage": "./",
  "main": "main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder",
    "lint": "eslint ."
  },
  "dependencies": {
    "emoji-picker-react": "^4.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.aadish.akatsukichat",
    "productName": "Akatsuki Chat",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
